                            <th>Tên</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Tên người nhận</th>
                            <th>Số điện thoại người nhận</th>
                            <th>Số nhà, đường</th>
                            <th>Trạng thái</th>
                            <th></th>
                            <th></th>
                          </tr>

                        </thead>
                        <tbody>
                          <% for (const customer of customers){ %>
                          <tr>
                            <td><%= customer.id %></td>
                            <td><%= customer.name %></td>
                            <td><%= customer.mobile %></td>
                            <td><%= customer.email %></td>
                            <td><%= customer.shipping_name %></td>
                            <td><%= customer.shipping_mobile %></td>
                            <td><%= customer.housenumber_street %></td>
                            <td><%= customer.is_active == '1' ? 'Hoạt động' : 'Không hoạt động' %></td>
                            <td><a type="button" class="btn btn-block btn-info" href="/admin/customer/edit/<%= customer.id %>/">Sửa</a></td>
                            <td>
                              <button data-href="/admin/customer/destroy/<%= customer.id %>" type="button" class="btn btn-block btn-danger destroy" data-toggle="modal" data-target="#exampleModal">
